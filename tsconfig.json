{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"],
      "#/*": ["./tests/*"]
    }
  },
  "include": ["src", "tests"]
}
